# Required: at least 32 characters for signing JWTs
JWT_SECRET=your-secret-key-at-least-32-characters-long

# Optional
JWT_EXPIRES_IN=24h
SESSION_IDLE_TIMEOUT_MINUTES=30
SESSION_ABSOLUTE_TTL_HOURS=8
QUERY_TIMEOUT_MS=300000
QUERY_ROW_LIMIT=10000
REPORT_MAX_ROWS=500

# CSP: allow iframe embedding (space-separated)
CSP_FRAME_ANCESTORS=https://*.navixy.com https://navixy.com

# CORS: comma-separated origins (or * for dev)
CORS_ORIGINS=https://app.navixy.com

# Redis for production session store (optional; in-memory used if not set)
# REDIS_URL=redis://...

PORT=3000
